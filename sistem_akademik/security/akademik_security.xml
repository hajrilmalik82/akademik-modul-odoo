<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.module.category" id="module_category_akademik">
            <field name="name">Academic System</field>
            <field name="description">Category for Academic System Access Rights</field>
            <field name="sequence">10</field>
        </record>

        <record id="group_akademik_student" model="res.groups">
            <field name="name">Student</field>
            <field name="category_id" ref="module_category_akademik"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_akademik_dosen" model="res.groups">
            <field name="name">Lecturer</field>
            <field name="category_id" ref="module_category_akademik"/>
            <field name="implied_ids" eval="[(4, ref('group_akademik_student'))]"/>
        </record>

        <record id="group_akademik_officer" model="res.groups">
            <field name="name">Officer</field>
            <field name="category_id" ref="module_category_akademik"/>
            <field name="implied_ids" eval="[(4, ref('group_akademik_dosen'))]"/>
        </record>

    </data>
</odoo>
