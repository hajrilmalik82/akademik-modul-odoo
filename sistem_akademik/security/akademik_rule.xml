<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    
        <record id="rule_akademik_krs_student" model="ir.rule">
            <field name="name">Student Own KRS Only</field>
            <field name="model_id" ref="model_akademik_krs"/>
            <field name="domain_force">[('student_id', '=', user.partner_id.id)]</field>
            <field name="groups" eval="[(4, ref('group_akademik_student'))]"/>
        </record>

        <record id="rule_akademik_krs_officer" model="ir.rule">
            <field name="name">Officer See All KRS</field>
            <field name="model_id" ref="model_akademik_krs"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_akademik_officer'))]"/>
        </record>
        <record id="rule_akademik_jadwal_student" model="ir.rule">
            <field name="name">Student Own Prodi Schedule</field>
            <field name="model_id" ref="model_akademik_jadwal"/>
            <field name="domain_force">[('study_program_id', '=', user.partner_id.study_program_id.id)]</field>
            <field name="groups" eval="[(4, ref('group_akademik_student'))]"/>
        </record>

        <record id="rule_akademik_jadwal_officer" model="ir.rule">
            <field name="name">Officer See All Schedules</field>
            <field name="model_id" ref="model_akademik_jadwal"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_akademik_officer'))]"/>
        </record>

        <!-- Hide "My Profile" menu from dosen & officer (pure XML).
             Record rule on ir.ui.menu: dosen/officer can only read menus
             where id is NOT the My Profile menuitem. -->
        <record id="rule_hide_my_profile_from_dosen" model="ir.rule">
            <field name="name">Hide My Profile Menu from Dosen/Officer</field>
            <field name="model_id" ref="base.model_ir_ui_menu"/>
            <field name="domain_force">['|', ('name', '!=', 'My Profile'), ('parent_id.name', '!=', 'Academic')]</field>
            <field name="groups" eval="[(4, ref('group_akademik_dosen'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

    </data>
</odoo>
