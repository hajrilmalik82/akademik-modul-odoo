<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_akademik_krs_score_wizard_form" model="ir.ui.view">
        <field name="name">akademik.krs.score.wizard.form</field>
        <field name="model">akademik.krs.score.wizard</field>
        <field name="arch" type="xml">
            <form string="Input Nilai">
                <group string="Mata Kuliah">
                    <field name="krs_line_id" readonly="1"/>
                </group>
                <group string="Komponen Nilai">
                    <field name="score_harian"/>
                    <field name="score_uts"/>
                    <field name="score_uas"/>
                </group>
                <group string="Hasil">
                    <field name="score_preview" readonly="1"/>
                    <field name="grade_preview" readonly="1"/>
                </group>
                <footer>
                    <button name="action_save_score" string="Simpan Nilai" type="object" class="btn-primary"/>
                    <button string="Batal" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_akademik_krs_score_wizard" model="ir.actions.act_window">
        <field name="name">Input Score</field>
        <field name="res_model">akademik.krs.score.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
