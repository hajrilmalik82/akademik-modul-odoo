<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_partner_tree_mahasiswa" model="ir.ui.view">
        <field name="name">res.partner.tree.mahasiswa</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <tree string="Student">
                <field name="image_128" widget="image"/>
                <field name="nim"/>
                <field name="name"/>
                <field name="study_program_id"/>
                <field name="entry_year_id"/>
                <field name="student_tags" widget="many2many_tags" options="{'color_field': 'color'}"/>
                <field name="email" widget="email"/>
                <field name="phone" widget="phone"/>
                <field name="research_topic"/>
                <field name="supervisor_id"/>
                <field name="achievement_level" widget="priority"/>
                <field name="status" widget="badge" decoration-success="status == 'graduated'" decoration-danger="status == 'dropout'"/>
            </tree>
        </field>
    </record>

    <record id="view_partner_form_inherit_akademik" model="ir.ui.view">
        <field name="name">res.partner.form.inherit.akademik</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='category_id']" position="after">
                <field name="identitas_mahasiswa"/>
            </xpath>
        </field>
    </record>

    <record id="view_mahasiswa_search" model="ir.ui.view">
        <field name="name">res.partner.search.mahasiswa</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <search string="Student Search">
                <field name="name" string="Name" filter_domain="['|', '|', ('name', 'ilike', self), ('nim', 'ilike', self), ('email', 'ilike', self)]"/>
                <field name="nim" string="NIM"/>
                <field name="email" string="Email"/>
                
                <separator/>
                <filter string="Active Student" name="filter_aktif" domain="[('status', '=', 'active')]"/>
                <filter string="Graduated" name="filter_lulus" domain="[('status', '=', 'graduated')]"/>
                <filter string="Dropped Out" name="filter_dropout" domain="[('status', '=', 'dropout')]"/>
                
                <group expand="0" string="Group By">
                    <filter string="Study Program" name="group_prodi" context="{'group_by': 'study_program_id'}"/>
                </group>
                <searchpanel>
                    <field name="study_program_id" icon="fa-building" enable_counters="1"/>
                    <field name="status" icon="fa-tags" enable_counters="1"/>
                </searchpanel>
            </search>
        </field>
    </record>

    <record id="action_mahasiswa_list" model="ir.actions.act_window">
        <field name="name">Student</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_partner_tree_mahasiswa"/>
        <field name="search_view_id" ref="view_mahasiswa_search"/>
        <field name="domain">[('identitas_mahasiswa', '=', True)]</field>
        <field name="context">{'default_identitas_mahasiswa': True, 'tree_view_ref': 'sistem_akademik.view_partner_tree_mahasiswa', 'form_view_ref': 'sistem_akademik.view_partner_form_mahasiswa'}</field>
    </record>

    <record id="view_partner_form_mahasiswa" model="ir.ui.view">
        <field name="name">res.partner.form.mahasiswa</field>
        <field name="model">res.partner</field>
        <field name="priority">200</field>
        <field name="arch" type="xml">
            <form string="Student">
                <header>
                    <button name="action_generate_nim" string="Generate NIM" type="object" class="oe_highlight" invisible="nim"/>
                    <field name="status" widget="statusbar" statusbar_visible="draft,active,graduated,dropout" options="{'clickable': '1'}"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box"/>
                    <field name="image_1920" widget="image" class="oe_avatar"/>
                    
                    <group>
                        <group string="Identity Data">
                            <field name="name" placeholder="Student Name" readonly="id != False" groups="!sistem_akademik.group_akademik_officer"/>
                            <field name="name" placeholder="Student Name" groups="sistem_akademik.group_akademik_officer"/>
                            <field name="identitas_mahasiswa" invisible="1"/>
                            <field name="nim" readonly="1"/>
                            <field name="study_program_id" readonly="1" groups="!sistem_akademik.group_akademik_officer"/>
                            <field name="study_program_id" groups="sistem_akademik.group_akademik_officer"/>
                        </group>
                        <group string="Contact &amp; Category">
                            <field name="email" widget="email"/>
                            <field name="phone" widget="phone"/>
                            <field name="student_tags" widget="many2many_tags" options="{'color_field': 'color'}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Academic Data">
                            <group>
                                <field name="research_topic"/>
                                <field name="supervisor_id" readonly="1"/>
                                <field name="achievement_level" widget="priority"/>
                                <field name="entry_year_id" readonly="1" groups="!sistem_akademik.group_akademik_officer"/>
                                <field name="entry_year_id" groups="sistem_akademik.group_akademik_officer"/>
                            </group>
                        </page>
                        <page string="Notes">
                            <field name="comment" placeholder="history or academic advisor observation"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>

