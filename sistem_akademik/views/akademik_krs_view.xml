<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_akademik_krs_tree" model="ir.ui.view">
        <field name="name">akademik.krs.tree</field>
        <field name="model">akademik.krs</field>
        <field name="arch" type="xml">
            <tree string="KRS">
                <field name="student_id"/>
                <field name="study_program_id"/>
                <field name="academic_year_id"/>
                <field name="semester"/>
            </tree>
        </field>
    </record>

    <record id="view_akademik_krs_form" model="ir.ui.view">
        <field name="name">akademik.krs.form</field>
        <field name="model">akademik.krs</field>
        <field name="arch" type="xml">
            <form string="KRS">
                <sheet>
                    <group>
                        <group>
                            <field name="student_id"/>
                            <field name="academic_year_id"/>
                        </group>
                        <group>
                            <field name="semester"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Study Plan Details">
                            <field name="line_ids">
                                <tree editable="bottom">
                                    <field name="jadwal_id"/>
                                    <field name="subject_id" readonly="1" force_save="1"/>
                                    <field name="credits" sum="Total SKS"/>
                                    <field name="is_thesis" column_invisible="1"/>
                                    <field name="score" readonly="1" force_save="1"/>
                                    <button name="action_open_score_wizard" type="object" icon="fa-pencil-square-o" string="Input Score" class="btn-primary" invisible="is_thesis" groups="sistem_akademik.group_akademik_officer"/>
                                    <field name="grade"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_akademik_krs_search" model="ir.ui.view">
        <field name="name">akademik.krs.search</field>
        <field name="model">akademik.krs</field>
        <field name="arch" type="xml">
            <search string="Search KRS">
                <field name="student_id" string="Student" filter_domain="['|', ('student_id.name', 'ilike', self), ('student_id.nim', 'ilike', self)]"/>
                <field name="academic_year_id"/>
                <field name="study_program_id"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Study Program" name="group_prodi" context="{'group_by': 'study_program_id'}"/>
                    <filter string="Academic Year" name="group_tahun" context="{'group_by': 'academic_year_id'}"/>
                    <filter string="Semester" name="group_semester" context="{'group_by': 'semester'}"/>
                </group>
                <searchpanel>
                    <field name="study_program_id" icon="fa-building" enable_counters="1"/>
                    <field name="academic_year_id" icon="fa-calendar" enable_counters="1"/>
                    <field name="semester" icon="fa-list-ol" enable_counters="1"/>
                </searchpanel>
            </search>
        </field>
    </record>

    <record id="action_akademik_krs" model="ir.actions.act_window">
        <field name="name">KRS List</field>
        <field name="res_model">akademik.krs</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_akademik_krs_search"/>
        <field name="context">{'search_default_group_tahun': 1, 'search_default_group_prodi': 1}</field>
    </record>
</odoo>
